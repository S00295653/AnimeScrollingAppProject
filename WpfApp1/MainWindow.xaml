<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="157*"/>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="587*"/>
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="cbxGenre" HorizontalAlignment="Left" Height="32" Margin="155,104,0,0" VerticalAlignment="Top" Width="113" Grid.ColumnSpan="3" Grid.Column="1" SelectionChanged="cbxGenre_SelectionChanged">

        </ComboBox>




        <Label Content="Genre" HorizontalAlignment="Left" Height="30" Margin="64,105,0,0" VerticalAlignment="Top" Width="80" FontSize="18" Grid.Column="1"/>

        <ListBox x:Name="lbxbands" HorizontalAlignment="Left" Height="238" Margin="64,161,0,0" VerticalAlignment="Top" Width="204" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="lbxbands_SelectionChanged" Grid.ColumnSpan="3" Grid.Column="1"/>

        <TextBlock x:Name="tblkBandInfo" HorizontalAlignment="Left" Height="54" Margin="137,107,0,0" TextWrapping="Wrap" Text="Band info" VerticalAlignment="Top" Width="425" Grid.Column="3" FontSize="14"/>
        <Label Content="Albums" HorizontalAlignment="Left" Height="45" Margin="137,161,0,0" VerticalAlignment="Top" Width="176" FontSize="24" Grid.Column="3"/>
        <ListBox x:Name="lbxAlbums" HorizontalAlignment="Left" Height="126" Margin="137,217,0,0" VerticalAlignment="Top" Width="425" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Column="3"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Height="36" Margin="463,363,0,0" VerticalAlignment="Top" Width="99" Grid.Column="3" Click="btnSave_Click"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Height="39" Margin="64,31,0,0" TextWrapping="Wrap" Text="Band" VerticalAlignment="Top" Width="100" FontSize="24" Grid.ColumnSpan="2"/>
        <TextBlock Grid.Column="3" HorizontalAlignment="Left" Height="52" Margin="137,31,0,0" TextWrapping="Wrap" Text="Band Information" VerticalAlignment="Top" Width="251" FontSize="24"/>

    </Grid>
</Window>
